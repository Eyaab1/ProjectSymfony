{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <h1>Post index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Contenu</th>
                <th>Published</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.contenu }}</td>
                <td>{{ post.published ? post.published|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_post_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('app_post_edit', {'id': post.id}) }}">edit</a>
                    <a href="{{ path('app_comment_new', {'postId': post.id}) }}">addComment</a>
                    {% for comment in post.comments %}
                        {{ comment.contenu }}
                    {% endfor %}
                </td>
            </tr>
            <tr class="comments-row" style="display: none;">
                <td colspan="4">
                    <h3>Comments:</h3>
                    <ul class="comments-list"></ul>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_post_new') }}">Create new</a>
{% endblock %}
